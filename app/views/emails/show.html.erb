<%- model_class = Email -%>
<% content_for :title do %>
  <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% end %>

<div class="col-sm-12 well">
	<strong class="col-sm-2"><%= @email.class.human_attribute_name(:subject) %>:</strong>
	<p class="col-sm-10"><%= @email.subject || raw("<em>#{t '.no_subject', :default => t('helpers.no_subject')}</em>") %></p>

	<strong class="col-sm-2"><%= @email.class.human_attribute_name(:from) %>:</strong>
	<p class="col-sm-10"><%= @email.from || "-" %></p>

	<strong class="col-sm-2"><%= @email.class.human_attribute_name(:to) %>:</strong>
	<p class="col-sm-10"><%= @email.to || "-" %></p>

	<strong class="col-sm-2"><%= @email.class.human_attribute_name(:created_at) %>:</strong>
	<p class="col-sm-10"><%= @email.created_at %></p>
</div>

<p class="body col-sm-12">
  <%= simple_format(@email.body) %>
</p>

<div class="col-sm-12">
	<hr/>
	<%= link_to 'Back', claim_emails_path(@claim), class: "btn btn-default" %>
	<hr/>
</div>
