<%- model_class = Claim -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:claim_id) %>:</strong></dt>
  <dd><%= @claim.claim_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:claimant_name) %>:</strong></dt>
  <dd><%= @claim.claimant_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postcode) %>:</strong></dt>
  <dd><%= @claim.postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:policy_no) %>:</strong></dt>
  <dd><%= @claim.policy_no %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              claims_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_claim_path(@claim), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              claim_path(@claim),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
