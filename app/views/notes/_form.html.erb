<%= form_for @note, url: {action: "create"}, :html => { :class => 'form-horizontal', :role => "form" } do |f| %>
  <div class="form-group">
    <%= f.label :body, :class => 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_area :body, cols: 20, rows: 5, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                claims_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
